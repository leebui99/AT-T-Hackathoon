<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tacoma.uw.leebui99.raisethepark.Question.QuestionForm">
    <TextView
    android:id="@+id/QuestionView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#e3f2fd"
    android:textAppearance="?android:attr/textAppearanceLarge" />

    <RadioGroup
        android:id="@+id/radioAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00" >
        <RadioButton
            android:id="@+id/radioAnswer1"
            android:textColor="#737CA1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/radioAnswer2"
            android:textColor="#737CA1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:id="@+id/radioAnswer3"
            android:textColor="#737CA1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:id="@+id/radioAnswer4"
            android:textColor="#737CA1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:id="@+id/radioAnswer5"
            android:textColor="#737CA1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:textColor="#737CA1"
        android:background="#1a237e"
        android:id="@+id/buttonSubmit"
        android:layout_gravity="center"/>

</LinearLayout>
